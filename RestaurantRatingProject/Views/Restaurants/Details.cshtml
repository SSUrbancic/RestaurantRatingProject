@model RestaurantRatingProject.Models.Restaurant

@{
    ViewBag.Title = "Details";
}

<head>
    <link href='https://fonts.googleapis.com/css?family=Sofia' rel='stylesheet'>
    <link rel="stylesheet" href="~/Content/MyStyleSheet.css">
</head>
<h2 class="titleHomePage" style="font-family: 'Sofia'">Rate this Restaurant</h2>

<div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cuisine)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cuisine)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NumberOfRatings)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumberOfRatings)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AveragingRating)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AveragingRating)
        </dd>
    </dl>
</div>

    @using (Html.BeginForm("Reviews", "Home", FormMethod.Post))
    {
        @Html.HiddenFor(modelItem => Model.RestaurantID)
        <p>Star Rating:</p> @Html.DropDownListFor(Model => Model.Rating, new SelectList(Model.StarRatings), "Select Rating", new { @class = "btn btn-default dropdown-toggle" })
            <button type="submit" value="submit" class="submitButton">Submit</button>
    }

        <div>
            @Html.ActionLink("Cancel", "Reviews", "Home")
        </div>
